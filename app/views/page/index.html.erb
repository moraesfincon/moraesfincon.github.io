<section class="modelos">

	<div class="container">

		<h2>Modelos</h2>

		<ul class="modelos_lista">
			<% @products.each do |product| %>
				<li class="grid-1-3">
					<a href="page-modelo.html #cargo">
						<%= image_tag product.image %>
						<h3><%= product.name %></h3>
					</a>		
				</li>
			<% end %>
		</ul>

	</div>

</section>
