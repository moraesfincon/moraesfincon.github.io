<%= render 'elements/header' %>

<%= render 'elements/produto' %>

<%= render 'elements/newsletter' %>

<section class="modelos">

	<div class="container text-center">

		<div class="grid-16">
			<h2>Lan√ßamentos</h2>
		</div>

		<div class="grid-16">
			<ul class="modelos_lista">
				<% cache @products_launch do %>
					<% @products_launch.each do |product_launch| %>
						<% cache product_launch do %>
							<li class="grid-1-3">
								<%= link_to  modelos_path do %>
									<%= image_tag product_launch.image.produc_list %>
									<h3><%= product_launch.name %></h3>
								<% end %>
							</li>
						<% end %>
					<% end %>
				<% end %>
			</ul>
		</div>

		<div class="grid-16">
			<h2>Modelos</h2>
		</div>

		<div class="grid-16">
			<ul class="modelos_lista">
				<% cache @products do %>
					<% @products.each do |product| %>
						<% cache product do %>
							<li class="grid-1-3">
								<%= link_to  modelos_path do %>
									<%= image_tag product.image.produc_list %>
									<h3><%= product.name %></h3>
								<% end %>
							</li>
						<% end %>
					<% end %>
				<% end %>
			</ul>

		</ul>
		<div class="grid-16">
			<%= link_to 'ver todos', modelos_path, class: 'btn' %>
		</div>
	</div>



</section>
